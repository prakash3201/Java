class Solution {
    public boolean check(int[] nums) {
        int n = nums.length;
        int count = 0;

        for (int i = 0; i < n; i++) {
            // If a number is greater than the next one, it's a "break point"
            if (nums[i] > nums[(i + 1) % n]) {
                count++;
            }
            // If there are more than one break points, it's not sorted-rotated
            if (count > 1) {
                return false;
            }
        }
        return true;
    }
}
